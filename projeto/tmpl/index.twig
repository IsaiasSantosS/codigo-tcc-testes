{% extends 'layout.twig' %}

{% block contents %}
<h1>
    Pesquisar 
</h1>
<form method="post" action="{{ url_for('buscar') }}">
  <div class="form-group">
    <label for="observacao">Texto da Observação</label>
    <textarea class="form-control" id="observacao" aria-describedby="observacaoHelp">
    </textarea>
    <small id="observacaoHelp" class="form-text text-muted">
    Informer o texto a ser pesquisado</small>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
        <label for="dataInicial">Data Inicial: </label>
        <input type="date" class="form-control" id="dataInicial">
    </div>
    <div class="form-group col-md-4">
        <label for="dataFinal">Data Final: </label>
        <input type="date" class="form-control" id="dataFinal">
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
        <label for="latitude">Latitude: </label>
        <input type="text" class="form-control" id="latitude">
    </div>
    <div class="form-group col-md-4">
        <label for="longitude">Longitude: </label>
        <input type="text" class="form-control" id="longitude">
    </div>
    <div class="form-group col-md-4">
        <label for="raio">Raio Km: </label>
        <input type="text" class="form-control" id="raio">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>
{% endblock %}
